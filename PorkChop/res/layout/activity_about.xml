<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/sample_bg_02">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_yellow_header_with_black"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_progcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_Porkchop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Version 1.0" 
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txt_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_version"
        android:layout_centerHorizontal="true"
        android:text="@string/created_by_team_awa" 
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/img_Porkchop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo_splash_page" />

</RelativeLayout>